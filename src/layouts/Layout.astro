---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot/>
		<canvas id="game"></canvas>
		<script src="/main.js" defer></script>
	</body>
</html>



<style is:global>
	:root {

	h1 {
    text-align: center;
    color: greenyellow;
    font-size: 2em;
    margin-top: 50px;
}

h2 {
    text-align: center;
    color: red;
    font-size: 2em;
    margin-top: 50px;
}

body {
    background-color: black;
    background-size: contain; /* Agregado punto y coma aquí */
}

canvas {
    border: 4px solid #fff;
    border-bottom: transparent;
    background: url('bg1.png'); /* Cambiado para apuntar a la raíz pública */
    background-repeat: repeat;
    margin: 0 auto;
    display: block;
}
	}
</style>
