---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot/>
		<canvas id="game"></canvas>
		<img id="joa" src="/joa.png" alt="arkanoid" />
		<img hidden id="bricks" src="/bricks.png" alt="arkanoid" />
		<img hidden id="sprite" src="/sprite.png" alt="arkanoid" />
		<script src="/main.js" defer></script>
	</body>
		
</html>



<style is:global>
	:root {
		/* Global variables can be defined here */
	}

		#joa {
		max-width: 30%;
		position: absolute;
		top: 50%; /* Ajusta esto para centrar verticalmente la imagen respecto al canvas */
		left: 0; /* Posiciona la imagen a la izquierda */
		transform: translateY(-50%); /* Centra la imagen verticalmente */
		margin: 0;
}


	h1 {
		text-align: center;
		color: greenyellow;
		font-size: 2em;
		margin-top: 50px;
	}

	h2 {
		color: #39ff14; /* Cambia este valor por el color que prefieras */
        font-weight: bold; /* Haz que el texto sea más llamativo */
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.8); /* Agrega un ligero efecto de sombra para destacar */
		text-align: center;
	}

	body {
		background-color: black;
		background-size: contain; /* Agregado punto y coma aquí */
	}

	canvas {
		border: 4px solid #fff;
		border-bottom: transparent;
		background: url('bg1.png'); /* Cambiado para apuntar a la raíz pública */
		background-repeat: repeat;
		margin: 0 auto;
		display: block;
	}
</style>
